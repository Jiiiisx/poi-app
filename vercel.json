{
  "version": 2,
  "builds": [
    { "src": "backend/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "src": "^/assets/(.*)$", "dest": "/assets/$1" },
    { "src": "^/css/(.*)$", "dest": "/css/$1" },
    { "src": "^/js/(.*)$", "dest": "/js/$1" },
    { "src": "^/([^/]+\.html)$", "dest": "/$1" },
    { "src": "^/$", "dest": "/index.html" }
  ]
}
